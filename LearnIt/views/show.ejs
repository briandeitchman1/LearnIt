<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>


<body>
    <div class="container">
        <div class="card my-3">
            <div class="card-body">
                <div class="card-title">

                    <h1>
                        <%=studyPage.title%>
                    </h1>
                </div>
                <div class="card-text">
                    <h3>
                        <%= studyPage.subject %>
                    </h3>
                </div>
                <h6 class="card-subtitle mb-2 text-muted">By: <%= studyPage.owner %>
                </h6>
                <a href="/study/<%=studyPage._id%>/edit">edit page</a>
            </div>
        </div>
        <% for(let flashCard of studyPage.flashCard){ %>
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= flashCard.term %>
                    </h5>
                    <div class="card-text ">
                        <%= flashCard.definition %>
                    </div>
                </div>
            </div>

            <% } %>


                <br>
                <% for(let multChoice of studyPage.multChoice ) { %>

                    <div class="row  border">
                        <div class="col border">
                            Question
                        </div>
                        <div class="col border">
                            Options
                        </div>
                        <div class="col border">
                            Answer
                        </div>
                    </div>
                    <div class="row mb-3 border">
                        <div class="col border">
                            <%= multChoice.question %>
                        </div>
                        <div class="col border">
                            <%= multChoice.options %>
                        </div>
                        <div class="col border">
                            <%= multChoice.answer %>
                        </div>
                    </div>
                    <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    <script type="text/javascript" src="../controller/show.js"></script>
</body>

</html>