<% layout("./layouts/boilerplate") %>

    <h1>DELETE PAGE</h1>
    <form action="/study/<%=studyPage._id%>?_method=DELETE" method="POST">
        <div class="mb-3">
            <button class="btn btn-danger">Delete the whole page</button>
        </div>
    </form>


    <form action="/study/<%=studyPage._id%>?_method=PATCH" method="POST">
        <% if(studyPage.flashCard.length) {%>
            <% studyPage.flashCard.forEach( function(card,i){ %>
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= card.term %>
                        </h5>
                        <div class="card-text ">
                            <%= card.definition %>
                        </div>
                    </div>
                    <div class="form-check-inline">
                        <label for="flashcard-<%=i%>">Delete?</label>
                        <input type="checkbox" id="flashcard-<%=i%>" name="deleteCards[]" value="<%=card._id%>">
                    </div>
                </div>

                <%}); %>
                    <% }%>


                        <br>

                        <% studyPage.multChoice.forEach((mult,i)=>{ %>
                            <div class="row  border">
                                <div class="col border">
                                    Question
                                </div>
                                <div class="col border">
                                    Options
                                </div>
                                <div class="col border">
                                    Answer
                                </div>
                            </div>
                            <div class="row mb-3 border">
                                <div class="col border">
                                    <%= mult.question %>
                                </div>
                                <div class="col border">
                                    <%= mult.options %>
                                </div>
                                <div class="col border">
                                    <%= mult.answer %>
                                </div>
                                <div class="form-check-inline">
                                    <label for="mult-<%=i%>">Delete?</label>
                                    <input type="checkbox" id="mult-<%=i%>" name="deleteMult[]" value="<%=mult._id%>">
                                </div>
                            </div>
                            <% }); %>

                                <button class="btn btn-info"> delete flashcards/questions </button>
    </form>